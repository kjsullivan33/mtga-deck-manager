extends layouts/main-layout.pug


block styles
  link(rel="stylesheet", href="/css/decks.css")

block content
  main
    if decks.length > 0
      .grid
        each deck in decks
          article.card.deck-item
            header.card__header
              h1.deck__name #{deck.name}
            .card__image
              img(src=deck.deckImage, alt="A MTGA Pic")
            .card__content
              h2.deck__colors #{deck.deckColors}
              p.deck__description 
            .card__actions
              button.btn View Details
    else
      h1 No Decks
